<Page
    x:Class="InventoryManagement.mainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local1="using:AssetObj"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="pageTitle" HorizontalAlignment="Left" Margin="62,84,0,0" Text="Inventory" TextWrapping="Wrap" VerticalAlignment="Top" Height="81" Width="310" FontSize="48" TextAlignment="Center"/>
        <HyperlinkButton Content="Click to go to page 1" HorizontalAlignment="Left" Height="87" Margin="243,818,0,0" VerticalAlignment="Top" Width="312" FontSize="22" Click="HyperlinkButton_Click"/>
        <ListView Name="InventoryList"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True"
                  Margin="20,168,344,122" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"  >
                        <TextBlock Text="ID" Margin="8,0" Width="300" Foreground="DarkRed" />
                        <TextBlock Text="Name" Width="150" Foreground="DarkRed" />
                        <TextBlock Text="SerialNumber" Width="200" Foreground="DarkRed" />
                        <TextBlock Text="ModelNumber" Width="120" Foreground="DarkRed" />
                        <TextBlock Text="Description" Width="150" Foreground="DarkRed" />
                        <TextBlock Text="Price" Width="80" Foreground="DarkRed" />
                        <TextBlock Text="CheckIn" Width="80" Foreground="DarkRed" />

                    </StackPanel>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local1:Asset">
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Name="ItemId"
                                    Text="{x:Bind IDnumber}"
                                    Width="300" />
                        <TextBlock Name="Name"
                                    Text="{x:Bind Name}"
                                    Width="150" />
                        <TextBlock Text="{x:Bind SerialNumber}"
                                   Width="200" />
                        <TextBlock Text="{x:Bind ModelNumber}"
                                   Width="150" />
                        <TextBlock Text="{x:Bind Description}"
                                   Width="120" />
                        <TextBlock Text="{x:Bind Price}"
                                   Width="80" />
                        <TextBlock Text="{x:Bind CheckIn}"
                                   Width="80" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock x:Name="OptionsText" HorizontalAlignment="Left" Height="69" Margin="1207,161,0,0" Text="Options" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" FontSize="36"/>
        <Button x:Name="AddItemButton" Content="Add Item" HorizontalAlignment="Left" Margin="1184,223,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="AddItemButtonClick" Tapped="AddItemButton_Tapped">
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <TextBlock Text="Access Denied"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
        <Button x:Name="RemoveItemButton" Content="Remove Item" HorizontalAlignment="Left" Margin="1184,324,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="RemoveButtonClick" Tapped="RemoveButton_Tapped">
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <TextBlock Text="Access Denied"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
        <Button x:Name="RemoveAllButton" Content="Remove All" HorizontalAlignment="Left" Margin="1184,427,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="RemoveAllButtonClick" Tapped="RemoveButton_Tapped">
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <TextBlock Text="Access Denied"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="1184,523,0,0" VerticalAlignment="Top" Height="54" Width="179" Click="UpdateButtonClick" Tapped="UpdateButton_Tapped">
            <FlyoutBase.AttachedFlyout>
                <Flyout>
                    <TextBlock Text="Access Denied"/>
                </Flyout>
            </FlyoutBase.AttachedFlyout>
        </Button>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" Margin="62,813,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="ExitButtonClick"/>
        <Button x:Name="BackButton" Content="Back" HorizontalAlignment="Left" Margin="571,813,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="BackButtonClick"/>

        <StackPanel HorizontalAlignment="Left" Height="86" VerticalAlignment="Top" Width="658" Margin="62,251,0,0"/>
        <Button x:Name="ScanButton" Content="Scan QR Code" HorizontalAlignment="Left" Margin="1187,612,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="ScanButtonClick"/>
        <Button x:Name="PrintButton" Content="Print QR Code" HorizontalAlignment="Left" Margin="1190,705,0,0" VerticalAlignment="Top" Height="58" Width="179" Click="PrintButtonClick"/>

    </Grid>
</Page>
